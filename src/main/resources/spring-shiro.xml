<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 1. SSM 整个 Shiro 的配置 -->
    <bean id="perRealm" class="com.yanjiang.basis.utils.shiro.PerRealm"/>

    <!-- 2. 配置安全管理器对象 -->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <!-- 引入自定义 Realm -->
        <property name="realm" ref="perRealm"/>
    </bean>

    <!-- 3. 保证实现了shiro内部lifecycle函数 -->

    <bean id="lifecycleBeanPostProcessor"
          class="org.apache.shiro.spring.LifecycleBeanPostProcessor"/>

    <bean id="autoProxyCreator"
          class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"
          depends-on="lifecycleBeanPostProcessor"/>

    <bean id="sourceAdvisor"
          class="org.apache.shiro.spring.security.interceptor.AuthorizationAttributeSourceAdvisor">
        <property name="securityManager" ref="securityManager"/>
    </bean>


    <!-- 4. 开启 shiro 注解 -->

    <!-- 5. shiro过滤器 -->
    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <!-- shiro的安全管理器 -->
        <property name="securityManager" ref="securityManager"/>
        <!-- 身份验证失败, 跳转到指定页面 -->
        <property name="loginUrl" value="/login"/>
        <!-- 权限验证失败, 跳转到指定页面 -->
        <property name="unauthorizedUrl" value="/main"/>
        <!-- shiro过滤规则 -->
        <property name="filterChainDefinitions">
            <value>
                <!-- 定义匿名访问的路径 -->
                /login=anon
                /startCaptcha=anon

                <!-- 静态资源匿名访问 -->
                /resources/*=anon
                /WEB-INF/files/*=anon


                 <!--定义角色检查的路径 -->
                <!--/user/home=roles[部门经理]-->
                <!--&lt;!&ndash; 定义需要认证的路径 &ndash;&gt;-->
                <!--/*=authc-->
                /researchRA/*=authc
                <!--/teacher=perms["user:create"]-->
            </value>
        </property>


    </bean>



</beans>